<?xml version="1.0" encoding="UTF-8"?><record_update table="sys_ui_page">
    <sys_ui_page action="INSERT_OR_UPDATE">
        <category>general</category>
        <client_script><![CDATA[addLoadEvent(function() {
    document.getElementById("printableArea").innerHTML = gel('frontSide').value;
});

function changeTemplate() {
    if (gel("template").value == 'front') {
        document.getElementById("printableArea").innerHTML = gel('frontSide').value;
    } else {
        document.getElementById("printableArea").innerHTML = gel('backSide').value;
    }
}

function onCancel() {
    GlideDialogWindow.get().destroy();
    return false;
}]]></client_script>
        <description/>
        <direct>true</direct>
        <endpoint>x_aleen_badgeoff_BadgeOfficer_print_preview_page.do</endpoint>
        <html><![CDATA[<?xml version="1.0" encoding="utf-8" ?>
<j:jelly trim="false" xmlns:j="jelly:core" xmlns:g="glide" xmlns:j2="null" xmlns:g2="null">
<g:ui_form>
	<input type="hidden" id="frontSide" name="frontSide" value="${sysparm_fronttemplate}"/>
	<input type="hidden" id="backSide" name="backSide" value="${sysparm_backtemplate}" />
	<div style="padding: 5px 10px;">
	<select id="template" name="Template" onchange="changeTemplate()" style="width: 530px;padding: 5px;text-align: center;">
		<option value="front">----Front-----</option>
		<option value="back">----Back-----</option>
	</select>
	</div>
</g:ui_form>

	<div id="printableArea"></div>
	
<footer class="modal-footer flex">
    <g:dialog_buttons_ok_cancel  ok_text="Print" ok_title="Print" ok_type="button" 
								 ok="return onPrint();"  cancel="return onCancel();" cancel_type="button"/>
</footer>

</j:jelly>]]></html>
